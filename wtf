<div class="links-container" id="linksContainer"></div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slideshow img');

        // Show first slide initially
        slides[0].style.display = 'block';

        function showSlide() {
            slides.forEach(slide => {
                slide.style.display = 'none';
            });
            
            slides[currentSlide].style.display = 'block';
            currentSlide = (currentSlide + 1) % slides.length;
        }

        // Start slideshow
        setInterval(showSlide, 150);

        // Add smooth scroll prevention - REMOVED
        // Add touch prevention for mobile - REMOVED

        // Create additional floating particles dynamically
        function createParticles() {
            const particleCount = 8;
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (4 + Math.random() * 4) + 's';
                document.body.appendChild(particle);
            }
        }

        // Initialize particles
        createParticles();


    </script>

<script>
    fetch('https://raw.githubusercontent.com/antonizabicki/quei-links-data/refs/heads/main/links.json')
        .then(res => res.json())
        .then(links => {
            const container = document.getElementById('linksContainer');
            links.forEach((link, index) => {
                const a = document.createElement('a');
                a.className = 'link';
                a.href = link.url;
                a.textContent = link.label;
                a.style.animationDelay = (index + 1) * 0.1 + 's';
                container.appendChild(a);
            });
        });
</script>

